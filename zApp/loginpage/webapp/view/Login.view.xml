<mvc:View controllerName="inkit.login.loginpage.controller.Login"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:form="sap.ui.layout.form" xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
				<content>
					<form:SimpleForm>      <!--create a SimpleForm and set library in xmlns for form-->
						<form:content>
							<Title id="__xmlview0--title" text="Please Fill The Form"/>
							<Label class="label" text="UserName"/>
							<Input class="input" id="user" placeholder="Enter UserName"/>
							<Label text="Password"/>
							<Input class="pwdClass" id="pwd" type="Password" placeholder="Enter Password"/>
						</form:content>
					<Button icon="sap-icon://visits" id="btn" text="Login" type="Accept" press="onBtnClick"/>
					</form:SimpleForm>
				</content>
			</Page>
</mvc:View>
